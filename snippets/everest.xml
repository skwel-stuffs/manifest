<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Remotes -->
  <remote name="gitea" fetch="https://gitea.com/" />
  <remote name="gitlab" fetch="https://gitlab.com/" />

  <!-- GitHub (EverestOS) -->
  <remote  name="everest"
           fetch="https://github.com/ProjectEverest/"
           revision="qpr3" />

  <!-- GitHub (EverestOS-AOSP) -->
  <remote  name="everest-aosp"
           fetch="https://github.com/EverestOS-AOSP/"
           revision="15" />

  <!-- General Repos -->
  <project path="bootable/recovery" name="bootable_recovery" remote="everest-aosp" />
  <project path="manifest" name="manifest" remote="everest-aosp" />
  <project path="bionic" name="bionic" remote="everest-aosp" />

  <!-- Build Repos -->
  <project path="build/make" name="build" groups="pdk" remote="everest-aosp" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <project path="build/soong" name="build_soong" groups="pdk,tradefed" remote="everest-aosp" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Device -->
  <project path="device/everest/sepolicy" name="device_everest_sepolicy" remote="everest-aosp" />
  <project path="device/qcom/sepolicy-legacy-um" name="device_qcom_sepolicy-legacy-um" groups="qcom,sdm660" remote="everest-aosp" />

  <!-- Frameworks Repos -->
  <project path="frameworks/av" name="frameworks_av" remote="everest-aosp" />
  <project path="frameworks/base" name="frameworks_base" remote="everest-aosp" />
  <project path="frameworks/native" name="frameworks_native" remote="everest-aosp" />

  <!-- Hardware Repos -->
  <project path="hardware/everest/interfaces" name="hardware_everest_interfaces" remote="everest-aosp" />

  <!-- Packages Repos -->
  <project path="packages/apps/Launcher3" name="packages_apps_Launcher3" remote="everest-aosp" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="everest-aosp" />
  <project path="packages/modules/Connectivity" name="packages_modules_Connectivity" remote="everest-aosp" />
  <project path="packages/services/Telecomm" name="packages_services_Telecomm" remote="everest-aosp" />

  <!-- System Repos -->

  <!-- Vendor Repos -->
  <project path="vendor/everest" name="vendor_everest" remote="everest-aosp" />
  <project path="vendor/gms" name="rayavanindra/vendor_gms" remote="gitlab" revision="15" clone-depth="1" />
  <project path="vendor/support" name="vendor_support" remote="everest-aosp" />
</manifest>
